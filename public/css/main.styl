fondo = #39362f
fondo2 = #21201c
naranja = #ff9400
cafe-claro = rgba(255,255,255,0.3)

@font-face {
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot?-4a6m85');
	src:url('../fonts/icomoon.eot?#iefix-4a6m85') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-4a6m85') format('woff'),
		url('../fonts/icomoon.ttf?-4a6m85') format('truetype'),
		url('../fonts/icomoon.svg?-4a6m85#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}	

body
	background fondo
	color white
	font-family Arial
	transition font-size 1s


	input
		border-radius 7px


	.header
		background #000 url(../imagenes/fondo1.jpg) no-repeat center top
		height: 520px
		overflow: hidden
		.hello
			font-size: 3em
			padding 3em
			text-align center
			text-shadow: 0 0 30px rgba(58,93,125,0.67)
			transition font-size 0.5s

	nav	
		background fondo2
		margin: 0 0 20px 0;
		text-align: center;	
		.menu
			line-height 35px
			margin 0
			overflow-x auto
			white-space nowrap
			li
				display inline-block
				margin: 20px 20px
				a 
					color naranja
					text-decoration none
					&:hover
						color white					
	.modelo
		background fondo2
		border-radius 10px
		box-shadow	7px 5px 8px rgba(black)
		display inline-block
		margin: 0 0 0 28em
		padding: 30px
		position: relative;
		width: 50%
		transition font-size 0.5s
		transition margin 1s

		.publicar
		.contenido
			vertical-align bottom


		.contenido
			font-family Arial
			float left
			margin 0.5em 0 0 0

			.tama√±o
					text-decoration none
					color naranja


		.publicar
			background naranja
			border-radius 10px
			color white
			float right
			margin 0 4em 0 0
			padding 0.5em
			text-decoration none
			
			&:hover
				background white
				color naranja
				text-decoration underline
			&:before
				content "\e604"
				display inline-block
				font-family "iconos"
				margin 0 0.5em 0 0 

	form
		padding: 1em
		text-align: center
		display none

		.publicar2
			margin-left 4em

		label
			display inline-block
			width 60px
	.posts
		padding 1em

		.post
			background fondo2
			border-radius 10px
			box-shadow	7px 5px 8px rgba(black)
			margin 0 0 2em 23em
			width: 60%
			transition width 1s
			transition margin 1s

			.descripcion
				
				.detalles
					height 160px
					margin-left 140px

					.social
						margin-top -1em

						.face
						.insta
						.twitter
						.google
							font-size 1.3em
							margin-right 1em
							overflow hidden
							text-decoration none
							margin-top -2em

						.face:before
							color white
							content "\e601"
							font-family "iconos"

						.twitter:before
							color white
							content "\e603"
							font-family "iconos"

						.insta:before
							color white
							content "\e602"
							font-family "iconos"

						.google:before
							color white
							content "\e600"
							font-family "iconos"

					.autor
						margin 1em 0 3em 0

					.fecha
						float right
						margin -1em 3em 0 0
						
					.titulo
						font-style italic
						margin 0
						padding 0.5em 0.5em 0 0 
				
				.imagen
					float left

					img
						border-radius: 0.5em
						height: 140px
						margin: 10px 0 0 10px
						vertical-align: top
						width: 120px
						
	footer
		background fondo2
		border-top white solid 1px
		margin-top 5em
		padding 1em 0
		text-align center
		width 100%

@media only screen and (max-width: 1080px)
	body
		.header
			.hello
				font-size 2.5em

		.modelo 
			margin 0 0 0 0
			width 100%

		.posts
			.post
				margin 0 0 2em 0
				width 100%

@media only screen and (max-width: 750px)
	body
		.header
			.hello
				font-size: 2em
				padding-top: 5em

	
